<Page
    x:Class="TMissionMobile.Utilities.ExtendedSplash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <Canvas>
            <Image Width="800" Height="600" x:Name="extendedSplashImage" Source="../Assets/t-mark-black.png"/>
            <ProgressRing Name="splashProgressRing" IsActive="True" Width="20" HorizontalAlignment="Center"/>
            <Button Visibility="Collapsed" x:Name="LoginTechnicianBtn" Content="Technician"  Click="LogInTechnician_Click" Width="180" Height="50" FontWeight="SemiBold" FontSize="22"/>
            <Button  Visibility="Collapsed" x:Name="LoginPilotBtn" Content="Pilot" Click="LoginPilotBtn_Click"  Width="180" Height="50" FontWeight="SemiBold" FontSize="22" />
        </Canvas>

    </Grid>

</Page>
